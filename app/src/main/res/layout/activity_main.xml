<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <Button
        android:id="@+id/Boton_SMS_ON_OFF"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="#919191"
        android:text="@string/sms_on_off"
        android:textColor="#120D0D"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/Boton_INTERNET"
        app:layout_constraintTop_toBottomOf="@+id/Boton_Llamada_numero_B_ON_Net" />

    <Button
        android:id="@+id/Boton_Llamada_numero_B_ON_Net"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginTop="230dp"
        android:background="#919191"
        android:text="@string/Llamada_numero_B_ON_Net"
        android:textColor="#120D0D"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Boton_SMS_ON_OFF"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/Boton_Llamada_numero_B_Off_Net"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="#919191"
        android:text="@string/Llamada_numero_B_Off_Net"
        android:textColor="#120D0D"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/Boton_INTERNET" />

    <Button
        android:id="@+id/Boton_INTERNET"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="#919191"
        android:text="@string/internet"
        android:textColor="#120D0D"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/Boton_Llamada_numero_B_Off_Net"
        app:layout_constraintTop_toBottomOf="@+id/Boton_SMS_ON_OFF" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20190024" />

    <Button
        android:id="@+id/estado"
        android:layout_width="111dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:text="@string/boton_estado"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/Boton_prueba" />

    <Button
        android:id="@+id/Boton_prueba"
        android:layout_width="109dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/Boton_prueba"
        app:layout_constraintStart_toStartOf="@+id/estado"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.79097384" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="491dp" />

    <TableLayout
        android:layout_width="271dp"
        android:layout_height="105dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/NumeroBOnVista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="@string/Ingreso_NumeroB_On_Net"
                android:textColor="#1C1111" />

            <EditText
                android:id="@+id/NumeroB_On_Net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="@string/Ingreso_NumeroB_On_Net"
                android:inputType="number"
                android:textColor="#1C1111" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/NumeroBOffVista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="@string/Ingreso_NumeroB_Off_Net"
                android:textColor="#1C1111" />

            <EditText
                android:id="@+id/NumeroB_Off_Net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="@string/Ingreso_NumeroB_Off_Net"
                android:inputType="number"
                android:textColor="#1C1111" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/NumeroBInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="@string/Ingreso_NumeroB_Internacional"
                android:textColor="#1C1111" />

            <EditText
                android:id="@+id/NumeroB_Internacional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="@string/Ingreso_NumeroB_Internacional"
                android:inputType="number"
                android:textColor="#1C1111" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/NumeroRobot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="@string/Ingreso_NumeroA"
                android:textColor="#1C1111" />

            <EditText
                android:id="@+id/NumeroA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="@string/Ingreso_NumeroA"
                android:inputType="number"
                android:textColor="#1C1111" />


        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>